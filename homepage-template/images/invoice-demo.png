<svg width="600" height="400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="600" height="400" fill="#f8fafc"/>
  
  <!-- Invoice Container -->
  <rect x="50" y="30" width="500" height="340" fill="white" stroke="#e2e8f0" stroke-width="2" rx="8"/>
  
  <!-- Header -->
  <rect x="50" y="30" width="500" height="60" fill="url(#grad1)" rx="8"/>
  <text x="300" y="65" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="white" text-anchor="middle">INVOICE</text>
  
  <!-- Company Info -->
  <text x="70" y="120" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="#1e293b">ABC Company (Pvt) Ltd</text>
  <text x="70" y="140" font-family="Arial, sans-serif" font-size="11" fill="#64748b">NTN: 1234567-8</text>
  
  <!-- Invoice Details -->
  <text x="430" y="120" font-family="Arial, sans-serif" font-size="11" fill="#64748b">Invoice #: INV-2025-001</text>
  <text x="430" y="140" font-family="Arial, sans-serif" font-size="11" fill="#64748b">Date: 22-11-2025</text>
  
  <!-- Table Header -->
  <rect x="70" y="160" width="460" height="30" fill="#f1f5f9"/>
  <text x="80" y="180" font-family="Arial, sans-serif" font-size="11" font-weight="bold" fill="#1e293b">Item</text>
  <text x="300" y="180" font-family="Arial, sans-serif" font-size="11" font-weight="bold" fill="#1e293b">Qty</text>
  <text x="370" y="180" font-family="Arial, sans-serif" font-size="11" font-weight="bold" fill="#1e293b">Price</text>
  <text x="470" y="180" font-family="Arial, sans-serif" font-size="11" font-weight="bold" fill="#1e293b">Total</text>
  
  <!-- Table Rows -->
  <line x1="70" y1="190" x2="530" y2="190" stroke="#e2e8f0" stroke-width="1"/>
  <text x="80" y="210" font-family="Arial, sans-serif" font-size="10" fill="#475569">Product A</text>
  <text x="300" y="210" font-family="Arial, sans-serif" font-size="10" fill="#475569">2</text>
  <text x="370" y="210" font-family="Arial, sans-serif" font-size="10" fill="#475569">5,000</text>
  <text x="470" y="210" font-family="Arial, sans-serif" font-size="10" fill="#475569">10,000</text>
  
  <line x1="70" y1="220" x2="530" y2="220" stroke="#e2e8f0" stroke-width="1"/>
  <text x="80" y="240" font-family="Arial, sans-serif" font-size="10" fill="#475569">Product B</text>
  <text x="300" y="240" font-family="Arial, sans-serif" font-size="10" fill="#475569">1</text>
  <text x="370" y="240" font-family="Arial, sans-serif" font-size="10" fill="#475569">15,000</text>
  <text x="470" y="240" font-family="Arial, sans-serif" font-size="10" fill="#475569">15,000</text>
  
  <!-- Totals -->
  <line x1="70" y1="270" x2="530" y2="270" stroke="#cbd5e1" stroke-width="2"/>
  <text x="370" y="290" font-family="Arial, sans-serif" font-size="11" fill="#475569">Subtotal:</text>
  <text x="470" y="290" font-family="Arial, sans-serif" font-size="11" fill="#475569">PKR 25,000</text>
  
  <text x="370" y="310" font-family="Arial, sans-serif" font-size="11" fill="#475569">GST (18%):</text>
  <text x="470" y="310" font-family="Arial, sans-serif" font-size="11" fill="#475569">PKR 4,500</text>
  
  <rect x="350" y="320" width="180" height="30" fill="#667eea" rx="4"/>
  <text x="370" y="340" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="white">Total:</text>
  <text x="470" y="340" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="white">PKR 29,500</text>
  
  <!-- FBR Badge -->
  <circle cx="100" cy="360" r="8" fill="#10b981"/>
  <text x="115" y="365" font-family="Arial, sans-serif" font-size="9" fill="#10b981" font-weight="bold">FBR Compliant</text>
</svg>
